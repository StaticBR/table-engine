{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"outDir": "./lib",
		"declaration": true,
		"strict": false,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"declarationMap": true,
		"isolatedModules": true,
		"sourceMap": true,
		"lib": [
			"esnext",
			"dom"
		],
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	]
}
